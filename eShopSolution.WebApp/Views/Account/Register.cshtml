                                <input class="form-input form-control" id="checkout-email-1" type="email" asp-for="Email" placeholder="E-Mail:">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-wrap">
                                <input class="form-input form-control" id="checkout-city-1" type="text" asp-for="UserName" placeholder="User Name:">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-wrap">
                                <input class="form-input form-control" id="checkout-city-1" type="password" asp-for="Password" placeholder="Password:">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-wrap">
                                <input class="form-input form-control" id="checkout-phone-1" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password:">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn ">Register</button>

                            <p class="signInclass"> Already have an account? &nbsp;<a href="/@culture/Account/Login">Sign In</a> </p>

