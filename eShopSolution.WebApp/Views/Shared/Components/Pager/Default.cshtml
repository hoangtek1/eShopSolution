@model eShopSolution.ViewModels.Common.PagedResultBase
@{
    var urlTemplate = Url.Action() + "?page={0}";
    var request = ViewContext.HttpContext.Request;


    foreach (var key in request.Query.Keys)
    {
        if (key == "page")
        {
            continue;
        }
        if (request.Query[key].Count > 1)
        {
            foreach (var item in (string[])request.Query[key])
            {
                urlTemplate += "&" + key + "=" + item;
            }
        }
        else
        {
            urlTemplate += "&" + key + "=" + request.Query[key];
        }
    }


    var startIndex = Math.Max(Model.PageIndex - 5, 1);
    var finishIndex = Math.Min(Model.PageIndex + 5, Model.PageCount);

}


@if (Model.PageCount > 1)
{
    <div class="pagination-section text-center wow fadeInDown animated">
        @if (Model.PageIndex != startIndex)
        {
            <a href="@urlTemplate.Replace("{0}", (Model.PageIndex-1).ToString())" class="prev page-numbers"><i class="fa fa-angle-left"></i></a>
        }
        @for (var i = startIndex; i <= finishIndex; i++)
        {
            if (i == Model.PageIndex)
            {
                <span class="page-numbers current" aria-current="page">@i.ToString()</span>
            }
            else
            {
                <a href="@urlTemplate.Replace("{0}", i.ToString())" class="page-numbers">@i.ToString()</a>
            }
        }
        @if (Model.PageIndex != finishIndex)
        {
            <a href="@urlTemplate.Replace("{0}", (Model.PageIndex+1).ToString())" class="next page-numbers">
                <i class="fa fa-angle-right"></i>
            </a>
        }
    </div>
}